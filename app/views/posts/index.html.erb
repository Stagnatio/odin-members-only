<%= render 'header' %>

<% @post.each do |post| %>
    <strong><%= post.title %></strong><br>
    <%= post.body %><br>
    <% if user_signed_in? %>
        <i>Author: <%= post.user.email %></i><br>
    <% else %>
        <br>
    <% end %>
    <br>
<% end %>

<%= link_to "Create Post", "/posts/new" %>